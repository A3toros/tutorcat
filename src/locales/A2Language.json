        "matching": [
          { "word": "tall", "meanings": ["high height", "low height", "middle aged"], "correct": 0 },
          { "word": "young", "meanings": ["not old", "very old", "medium height"], "correct": 0 },
          { "word": "happy", "meanings": ["feeling good", "feeling sad", "very tall"], "correct": 0 }
        ],
        "fillBlanks": [
          { "sentence": "He is ___.", "options": ["tall", "short", "happy"], "correct": 0 },
          { "sentence": "She is very ___.", "options": ["kind", "tall", "young"], "correct": 0 }
        ]
      },
      "grammar": {
        "sentences": [
          { "words": ["He", "is", "tall", "and", "young"], "correct": "He is tall and young." },
